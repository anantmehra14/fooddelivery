<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal"
    tools:context="com.example.anantmehra.eatfirst2.confirm">




        <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="23dp"
        android:text="Your order has been confirmed !!"
        android:textColor="@android:color/holo_purple"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="70dp"
        android:text="Thank you for choosing EatFirst. !!"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView250"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="110dp"
        android:text="Your order will be delivered soon."
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Would you like to rate the app ?"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/or"
        android:layout_toRightOf="@+id/or"
        android:layout_toEndOf="@+id/or"
        android:layout_marginTop="87dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="380sp"
        android:text="Submit"
        android:textStyle="bold"/>




    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView23"
        android:layout_alignRight="@+id/textView23"
        android:layout_below="@+id/textView25"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="21dp"

        android:numStars="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/or"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="170dp"
                android:text="Order Id : "
                android:textSize="15sp"
                android:textStyle="bold"/>

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/idd"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="170dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:hint="hint"/>


</RelativeLayout>

